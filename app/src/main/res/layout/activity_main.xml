<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_krsnabalarama"
    tools:context="com.example.zemoso.sadhnacard.MainActivity">

    <Button
        android:id="@+id/start_syamananda_button"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:text="@string/syamananda_button_name" />

    <Button
        android:id="@+id/start_narottama_button"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_syamananda_button"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:text="@string/narottama_button_name" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>